<?xml version="1.0" encoding="UTF-8"?>
<persistence  xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.1" >

    <persistence-unit name="MyFinancePU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.br.MyFinance.Model.UsuarioModel</class>
        <class>com.br.MyFinance.Model.ContaBancariaModel</class>
        <class>com.br.MyFinance.Model.BancoModel</class>
        <class>com.br.MyFinance.Model.ReceitaModel</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/DbMyFinance?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Marioviado1@"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>